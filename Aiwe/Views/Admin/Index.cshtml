@using Aibe.Helpers
@{
  ViewBag.Title = "Admin Page";
  bool isDebug = false;
#if DEBUG
  isDebug = true;
#endif
}

<br/>
<div class="row">
  <div class="col-md-3">
    <h4 class="module-header">
      <span class="glyphicon glyphicon-user text-success"></span>
      Users <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-1"></span>
    </h4>
    <div id="module-1" class="module-div">
      <a href="../../../../../User/Index" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-user"></span> Users
      </a>
      <a href="../../../../../Team/Index" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-briefcase"></span> Teams
      </a>
    </div>
  </div>
  <div class="col-md-3">
    <h4 class="module-header">
      <span class="glyphicon glyphicon-folder-close text-primary"></span>
      Users <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-2"></span>
    </h4>
    <div id="module-2" class="module-div">
      <a href="../../../../../Common/Index/CoreAccessLog" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-pencil"></span> Access Log
      </a>
      <a href="../../../../../Common/Index/CoreActionLog" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-book"></span> Action Log
      </a>
    </div>
  </div>
  @if (User.IsInRole(Aibe.DH.DevRole)) { //only developer can create new roles as of now
    <div class="col-md-3">
      <h4 class="module-header">
        <span class="glyphicon glyphicon-equalizer text-danger"></span>
        Roles <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-3"></span>
      </h4>
      <div id="module-3" class="module-div">
        <a href="../../../../../Role/Index" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
          <span class="glyphicon glyphicon-bell"></span> Roles
        </a>
      </div>
    </div>
    <div class="col-md-3">
      <h4 class="module-header">
        <span class="glyphicon glyphicon-king" style="color:purple"></span>
        Developer Options <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-4"></span>
      </h4>
      <div id="module-4" class="module-div">
        @if (isDebug) {
          <a href="../../../../../Meta/Index" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
            <span class="glyphicon glyphicon-queen"></span> Meta
          </a>
          <a href="../../../../../Common/Index/CoreUserMap" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#737373;border-color:#737373">
            <span class="glyphicon glyphicon-map-marker"></span> User Map
          </a>
          <a href="../../../../../Common/Index/CoreErrorLog" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
            <span class="glyphicon glyphicon-remove-sign"></span> Error Log
          </a>
        } else {
          <a href="../../../../../Common/Index/CoreUserMap" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#737373;border-color:#737373">
            <span class="glyphicon glyphicon-map-marker"></span> User Map
          </a>
          <a href="../../../../../Common/Index/CoreErrorLog" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
            <span class="glyphicon glyphicon-remove-sign"></span> Error Log
          </a>
        }
      </div>
    </div>
  }
</div>
