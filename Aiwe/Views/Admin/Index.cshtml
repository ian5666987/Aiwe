@using Aibe.Helpers
@{
  ViewBag.Title = Aibe.LCZ.W_AdminPage;
  bool isDebug = false;
#if DEBUG
  isDebug = true;
#endif
}

<br/>
<div class="row">
  <div class="col-md-3">
    <h4 class="module-header">
      <span class="glyphicon glyphicon-user text-success"></span>
      @Aibe.LCZ.W_Users <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-1"></span>
    </h4>
    <div id="module-1" class="module-div">
      <a href="../../../../../@Aiwe.DH.MvcUserControllerName/@Aibe.DH.IndexActionName" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-user"></span> @Aibe.LCZ.W_Users
      </a>
      <a href="../../../../../@Aiwe.DH.MvcTeamControllerName/@Aibe.DH.IndexActionName" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-briefcase"></span> @Aibe.LCZ.W_Teams
      </a>
    </div>
  </div>
  <div class="col-md-3">
    <h4 class="module-header">
      <span class="glyphicon glyphicon-folder-close text-primary"></span>
      @Aibe.LCZ.W_Logs <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-2"></span>
    </h4>
    <div id="module-2" class="module-div">
      <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.AccessLogTableName" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-pencil"></span> @Aibe.LCZ.W_AccessLog
      </a>
      <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.ActionLogTableName" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;">
        <span class="glyphicon glyphicon-book"></span> @Aibe.LCZ.W_ActionLog
      </a>
    </div>
  </div>
  @if (User.IsInRole(Aibe.DH.DevRole)) { //only developer can create new roles as of now
    <div class="col-md-3">
      <h4 class="module-header">
        <span class="glyphicon glyphicon-equalizer text-danger"></span>
        @Aibe.LCZ.W_Roles <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-3"></span>
      </h4>
      <div id="module-3" class="module-div">
        <a href="../../../../../@Aiwe.DH.MvcRoleControllerName/@Aibe.DH.IndexActionName" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
          <span class="glyphicon glyphicon-bell"></span> @Aibe.LCZ.W_Roles
        </a>
      </div>
    </div>
    <div class="col-md-3">
      <h4 class="module-header">
        <span class="glyphicon glyphicon-king" style="color:purple"></span>
        @Aibe.LCZ.W_DeveloperOptions <span class="glyphicon glyphicon-chevron-down module-button" id="module-button-4"></span>
      </h4>
      <div id="module-4" class="module-div">
        @if (isDebug) {
          <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.MetaTableName" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
            <span class="glyphicon glyphicon-queen"></span> @Aibe.LCZ.W_Meta
          </a>
          <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.UserMapTableName" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#737373;border-color:#737373">
            <span class="glyphicon glyphicon-map-marker"></span> @Aibe.LCZ.W_UserMap
          </a>
          <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.ErrorLogTableName" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
            <span class="glyphicon glyphicon-remove-sign"></span> @Aibe.LCZ.W_ErrorLog
          </a>
        } else {
          <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.UserMapTableName" class="btn btn-primary btn-block button-odd-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#737373;border-color:#737373">
            <span class="glyphicon glyphicon-map-marker"></span> @Aibe.LCZ.W_UserMap
          </a>
          <a href="../../../../../@Aiwe.DH.MvcCommonControllerName/@Aibe.DH.IndexActionName/@Aibe.DH.ErrorLogTableName" class="btn btn-primary btn-block button-even-feinmetall" style="margin-top:5px;margin-right:5px;background-color:#1a3a89;border-color:#1a3a89">
            <span class="glyphicon glyphicon-remove-sign"></span> @Aibe.LCZ.W_ErrorLog
          </a>
        }
      </div>
    </div>
  }
</div>
