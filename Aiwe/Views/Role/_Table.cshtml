@using Aiwe.Models.ViewModels
@model List<RoleViewModel>
<table class="table table-bordered table-striped">
  <tr>
    <th>@Aibe.LCZ.W_ShortNo</th>
    <th>@Aibe.LCZ.W_Role</th>    
    <th>@Aibe.LCZ.W_Actions</th>
  </tr>

  @if (Model != null) {
    for (int i = 0; i < Model.Count(); ++i) {
      <tr>
        <td>@((i + 1).ToString())</td>
        <td>@Model[i].Name</td>
        <td>@Html.ActionLink(Aibe.LCZ.W_Edit, Aibe.DH.EditActionName, new { id = Model[i].Id }) |
        @Html.ActionLink(Aibe.LCZ.W_Details, Aibe.DH.DetailsActionName, new { id = Model[i].Id }) |          
          @Html.ActionLink(Aibe.LCZ.W_Delete, Aibe.DH.DeleteActionName, new { id = Model[i].Id })          
        </td>
      </tr>
    }
  }
</table>