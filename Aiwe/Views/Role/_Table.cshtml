@using Aiwe.Models.ViewModels
@model List<RoleViewModel>
<table class="table table-bordered table-striped">
  <tr>
    <th>No</th>
    <th>Role</th>    
    <th>Actions</th>
  </tr>

  @if (Model != null) {
    for (int i = 0; i < Model.Count(); ++i) {
      <tr>
        <td>@((i + 1).ToString())</td>
        <td>@Model[i].Name</td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = Model[i].Id }) |
        @Html.ActionLink("Details", "Details", new { id = Model[i].Id }) |          
          @Html.ActionLink("Delete", "Delete", new { id = Model[i].Id })          
        </td>
      </tr>
    }
  }
</table>