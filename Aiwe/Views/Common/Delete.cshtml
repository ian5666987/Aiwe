@using Aiwe.Models;

@model AiweDetailsModel

@{
  ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "Common", FormMethod.Post, new { id = "commonForm" })) {
  <input type="hidden" name="tableName" value="@Model.TableName"/>
  <input type="hidden" name="id" value="@Model.Cid" />
  <h2>@Model.TableDisplayName <small>(@ViewBag.Title)</small></h2>
  <h3 class="text-danger">Are you sure you want to delete this record?</h3>
  <br />

  Html.RenderPartial("_DetailsPart");
  <div class="row">
    <div class="form-group">
      <div class="btn btn-danger col-md-1" style="margin-left:12px; margin-right:8px; margin-top:15px;" onclick="submitCommonForm()">
        <span class="glyphicon glyphicon-remove"><font style="font-family:verdana;"> Delete</font></span>
      </div>
      <a href="../../../../../../Common/Index/@Model.TableName"
         class="btn btn-primary col-md-2"
         style="margin-left:12px; margin-top:15px;">
        <span class="glyphicon glyphicon-circle-arrow-left"><font style="font-family:verdana;"> Back To List</font></span>
      </a>
    </div>
    <br />
  </div>
}

