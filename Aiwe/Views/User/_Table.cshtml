@using Aiwe.Models.ViewModels
@model List<ApplicationUserViewModel>
<table class="table table-bordered table-striped">
  <tr>
    <th>@Aibe.LCZ.W_ShortNo</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.FullName</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.DisplayName</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.Email</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.Team</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.WorkingRole</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.AdminRole</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.LastLogin</th>
    <th>@Aiwe.LCZ.F.ApplicationUserViewModel.RegistrationDate</th>
    <th>@Aibe.LCZ.W_Actions</th>
  </tr>

  @if (Model != null) {
    for (int i = 0; i < Model.Count(); ++i) {
      <tr>
        <td>@((i + 1).ToString())</td>
        <td>@Model[i].FullName</td>
        <td>@Model[i].DisplayName</td>
        <td>@Model[i].Email</td>
        <td>@Model[i].Team</td>
        <td>@Model[i].WorkingRole</td>
        <td>@Model[i].AdminRole</td>
        <td>@Model[i].LastLogin</td>
        <td>@Model[i].RegistrationDate</td>

        <td>
          @Html.ActionLink(Aibe.LCZ.W_Details, Aibe.DH.DetailsActionName, new { id = Model[i].Id }) |
          @if (Aibe.DH.MainAdminRoles.Contains(Model[i].AdminRole) || Model[i].Email == User?.Identity?.Name) {
            <span style="color:lightgray">@Aibe.LCZ.W_Edit</span> @:|
            <span style="color:lightgray">@Aibe.LCZ.W_Delete</span>
          } else {
            @Html.ActionLink(Aibe.LCZ.W_Edit, Aibe.DH.EditActionName, new { id = Model[i].Id }) @:|
            @Html.ActionLink(Aibe.LCZ.W_Delete, Aibe.DH.DeleteActionName, new { id = Model[i].Id })
          }
        </td>
      </tr>
    }
  }
</table>