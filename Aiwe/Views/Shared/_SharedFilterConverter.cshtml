@using Aibe.Models.Filters;
@using Aiwe.Models.Filters;
@{
  string filterName = ViewBag.FilterName;
  BaseFilter baseFilter = (BaseFilter)ViewBag.Filter;
}

@switch (filterName) {
  case "ApplicationUser": @Html.Partial("_Filter", baseFilter == null ? new ApplicationUserFilter() : (ApplicationUserFilter)ViewBag.Filter) break;
  case "Team": @Html.Partial("_Filter", baseFilter == null ? new TeamFilter() : (TeamFilter)ViewBag.Filter) break;
  case "Role": @Html.Partial("_Filter", baseFilter == null ? new RoleFilter() : (RoleFilter)ViewBag.Filter) break;
}
