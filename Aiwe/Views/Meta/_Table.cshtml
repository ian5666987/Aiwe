@using Aibe.Models.DB
@model List<MetaItem>
<table class="table table-bordered table-striped">
  <tr>
    <th>No</th>
    <th>Table Name</th>
    <th>Display Name</th>
    <th>Actions</th>
  </tr>

  @if (Model != null) {
    for (int i = 0; i < Model.Count(); ++i) {
      <tr>
        <td>@((i + 1).ToString())</td>
        <td>@Model[i].TableName</td>
        <td>@Model[i].DisplayName</td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = Model[i].TableName }) |
        @Html.ActionLink("Details", "Details", new { id = Model[i].TableName }) |          
          @Html.ActionLink("Delete", "Delete", new { id = Model[i].TableName }) |
        @Html.ActionLink("Crypto-Serialize", "CryptoSerialize", new { id = Model[i].TableName })
        </td>
      </tr>
    }
  }
</table>

